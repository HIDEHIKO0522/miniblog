<div class="contents_image2">
  <% @blogs.each do |blog| %>
  <a href="/blogs/<%= blog.id %>">
    <div class="content_post2" style="background-image: url(<%= blog.image %>);">   
    </div> 
     <div class="contents_intro2">
       <h1><%= simple_format(blog.intro) %></h1>
    </div>
    <div class="contents_date2">
     <h6>公開日:<%= blog.created_at.strftime("%Y/%m/%d %H:%M") %><br> 
    最終更新日:<%=  blog.updated_at.strftime("%Y/%m/%d %H:%M") %></h6>
    </div>
    <div class="content_more2">
      <ul class="more_list2">
        <% if user_signed_in? && current_user.id == blog.user_id %>
          <li>
            <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get,class: 'btn btn-default' %>
            <%= link_to '削除', "/blogs/#{blog.id}", method: :delete,class: 'btn btn-default' %>
          </li>
        <% end %>
      </ul>  
    </div>
  <HR ALIGN="center" WIDTH="600">  
  <% end %> 
 </a> 
  <%= paginate(@blogs) %> 

</div>
